{
  "env": {
    "browser": true,
    "commonjs": true,
    "amd": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "impliedStrict ": true
    }
  },
  "extends": "eslint:recommended",
  "globals": {
    "React": true,
    "ReactDOM": true,
    "assert": true,
    "process": true
  },
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
